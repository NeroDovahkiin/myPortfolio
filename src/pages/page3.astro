<script type="module">
    // import Swiper JS
    import Swiper from "./node_modules/swiper/swiper-bundle.mjs";
    import "./node_modules/swiper/swiper.css";

    var swiper = new Swiper(".product-thumb", {
        spaceBetween: 30,
        slidesPerView: 3,

        freeMode: true,
        watchSlidesProgress: true,
    });
    var swiper2 = new Swiper(".product-prev", {
        loop: true,
        spaceBetween: 10,
        thumbs: {
            swiper: swiper,
        },
    });
</script>

